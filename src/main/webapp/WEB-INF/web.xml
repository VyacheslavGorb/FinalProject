<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>edu.gorb.musicstudio.conroller.Controller</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>edu.gorb.musicstudio.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>ResponseCacheFilter</filter-name>
        <filter-class>edu.gorb.musicstudio.filter.ResponseCacheFilter</filter-class>
    </filter>

    <filter>
        <filter-name>AccessLevelFilter</filter-name>
        <filter-class>edu.gorb.musicstudio.filter.AccessLevelFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AccessLevelFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ResponseCacheFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/error/error_404.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type >
        <location>/WEB-INF/pages/error/error_500.jsp</location>
    </error-page>

</web-app>